<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="6dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Gambar wisata -->
        <ImageView
            android:id="@+id/ivWisataSmall"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:background="@drawable/bg_image_rounded"
            android:src="@drawable/ic_launcher_background" />

        <!-- Konten teks -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/tvNamaWisataSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama Wisata"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:ellipsize="end"
                android:maxLines="2" />

            <TextView
                android:id="@+id/tvLokasiWisataSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lokasi"
                android:textSize="13sp"
                android:textColor="@android:color/holo_blue_dark"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/tvDeskripsiWisataSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Deskripsi singkat..."
                android:textSize="12sp"
                android:textStyle="italic"
                android:textColor="@android:color/darker_gray"
                android:ellipsize="end"
                android:maxLines="2"
                android:layout_marginTop="6dp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
